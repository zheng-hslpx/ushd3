{
  "env_paras": {
    "num_usvs": 5,
    "num_tasks": 24,
    "map_size": [120, 120],
    "battery_capacity": 220.0,
    "usv_speed": 5.0,
    "charge_time": 30.0,
    "device": "cuda:0",
    "min_task_time_visual": 5.0,
    "reward_config": {
      "use_potential_based_reward": false,
